{% extends 'layout.html.twig' %}
{% block title %}ATP!{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {# 'app' must match the first argument to addEntry() in webpack.config.js #}
    {{ encore_entry_link_tags('atp') }}
    <!-- Renders a link tag (if your module requires any CSS)
                     <link rel="stylesheet" href="/build/app.css"> -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

{% endblock %}
{% block javascripts %}
    <script type="application/javascript">

        let xKeys = {{ keys|json_encode|raw }};
        let yValues = {{ values|json_encode|raw }};
        let done = {{ done|json_encode|raw }};
        let phases = {{ phases|json_encode|raw }};
        let flags = {{ flags|json_encode|raw }};
        let phases2 = {{ phases2|json_encode|raw }};

    </script>
    {{ parent() }}
    {{ encore_entry_script_tags('atp') }}

    <!-- Renders app.js & a webpack runtime.js file
        <script src="/build/runtime.js"></script>
        <script src="/build/app.js"></script> -->
{% endblock %}


{% block page_content %}


    <form>
        <div class="row">
            <div class="col-xs-1 text-left">
                <i class="material-icons" title="Add trial" id="add-trial">control_point</i>
            </div>
        </div>
        <div class="row">
            <div class="col-xs">
                <ul class="collapsible popout" id="time-trials">
                    <li>
                        <div class="collapsible-header"><i class="material-icons">playlist_add_check</i>Set up plan1
                        </div>
                        <div class="collapsible-body"><span>Lorem ipsum dolor sit amet.</span>
                            <div class="row">
                                <div class="input-field col-xs-2">
                                    <input id="plan_name" type="text">
                                    <label for="plan_name">Plan name</label>
                                </div>
                                <div class="input-field col-xs-2">
                                    <input id="last_name" type="text" class="validate">
                                    <label for="last_name">Description</label>
                                </div>
                                <div class="input-field col-xs-2">
                                    <input type='text' class="datepicker-here" id="air-datapicker"
                                           data-language='pl'
                                           data-multiple-dates="3"
                                           data-multiple-dates-separator=" -> "
                                           data-position='bottom right'
                                    />
                                    <label for="air-datapicker">Plan start</label>
                                </div>
                            </div>
                        </div>
                    </li>

                    <li class="time-trial" id="li-time-trial-1">

                        <div class="collapsible-header" style="justify-content: space-between">
                            <div>
                                <i class="material-icons">playlist_add</i>Time trial
                            </div>
                            <div><i class="material-icons remove-trial" title="Remove trial" id="1">clear</i>
                            </div>
                        </div>
                        <div class="collapsible-body"><span>Lorem ipsum dolor sit amet.</span>
                            <div class="row">
                                <div class="input-field col-xs-2">
                                    <input id="plan_name" type="text">
                                    <label for="plan_name">Trial name</label>
                                </div>
                                <div class="input-field col-xs-2">

                                    <input type='text' class="datepicker-here"
                                           data-language='pl'
                                           data-multiple-dates="1"
                                           data-position='bottom right'
                                    />
                                    <label for="air-datapicker">Trial start</label>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>

        {#        <div class="row">#}
        {#            <div class="col-xs-4">#}
        {#                <p class="range-field">#}
        {#                    <input type="range" id="test5" min="0" max="100"/>#}
        {#                </p>#}
        {#            </div>#}
        {#        </div>#}

    </form>

    <div class="row canvas">
        <div style="">
            <span></span>
        </div>
        <canvas id="chartJSContainer" width="1920" height="650"></canvas>
        <ul id="contextMenu">
            <li class="menu-item" onclick="menu(1)">remove</li>
            <li class="menu-item" onclick="menu(2)">change</li>
            <li class="menu-item" onclick="menu(3)">add</li>
        </ul>
    </div>
    <dom-module id="my-custom-stuff" theme-for="vaadin-text-field vaadin-date-picker-overlay-content">
        <template>

            <style>
                :host([theme="my-theme"]) [part="label"], [part="input-field"], [part="toggle-button"] [part="button"] {
                    color: var(--primary-color) !important;
                    background-color: var(--primary-background-color);

                }

                :host([theme="my-theme"]) :focus {
                    background-color: #ffffff;
                    color: #fff;
                }

                :host([part="toggle-button"]) {
                    color: var(--primary-color) !important;

                }
            </style>
        </template>
    </dom-module>
    <div class="darken-container">
        <div class="container-fluid">
            <div class="row controls badges">
                <div class="col-xs-5">
                    <ul class="list small float-left" id="activity-badges">
                    </ul>
                </div>

                <div class="col-xs-7">
                    <ul class="list small float-right" id="action-badges">

                    </ul>
                </div>
            </div>
            <div class="row controls badges">
                <div class="col-xs-5">
                    <ul class="list small float-left" id="config-badges">
                    </ul>
                </div>
            </div>


            {#            <plan-form-collapse id="collapse">#}
