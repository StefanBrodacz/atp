{% block body %}
    <div class="curtain">

        {#        <div class="lds-ripple"><div></div><div></div></div>#}
        <div class="curtain__wrapper">


            <input id="curtain__checkbox" type="checkbox" >

            <div class="curtain__panel curtain__panel--left">
                {% block left_curtain %}
                {% endblock %}
                <h2 id="hour"></h2>
                {#                <h2>tajne dane agencji wywiadowczej </h2>#}
            </div> <!-- curtain__panel -->

            <div class="curtain__content">

                {{ parent() }}

            </div>

            <div class="curtain__panel curtain__panel--right">
                <h2 id="time"></h2>
                <script type="application/javascript">
                    function Clock(date) {
                        this.date = date;
                    }

                    Clock.prototype.tick = function () {
                        let timestamp = this.date.getTime();
                        setInterval(() => {
                            $('#time').html((new Date(timestamp)).toTimeString().slice(4, 8));
                            $('#hour').html((new Date(timestamp)).toTimeString().slice(0, 4));
                            timestamp += 1000;
                        }, 1000);
                    };
                    let clock = new Clock(new Date);
                    clock.tick();

                </script>

                {#                    <h3>&nbsp;Oczy, które nie..yyy...wszystko widzą</h3>#}
            </div> <!-- curtain__panel -->

        </div> <!-- curtain__wrapper -->
    </div> <!-- curtain -->

{% endblock %}

